#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

error=false

cd ./backend

if ./mvnw notice:check; then
  echo "Notice OK"
else
  error=true
  echo "Fix notice"
  ./mvnw notice:generate
fi
if ./mvnw license:check; then
  echo "License OK"
else
  error=true
  echo "Fix license"
  ./mvnw license:format
fi

cd ../frontend

npx lint-staged
if $error; then
  exit 1;
fi
